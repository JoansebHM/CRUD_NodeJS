<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Doctores</title>
    <link rel="stylesheet" href="/styles.css">
  <body>
    <a href="/">
      <img src="/img/home.png" alt="" class="icon">
    </a>
    <h1>Doctores</h1>
    <table>
      <thead>
        <th scope="col">IdDoctor</th>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Correo</th>
        <th scope="col">Especialidad</th>
        <th scope="col"></th>
      </thead>
      <thead>
        <% rows.forEach((doctor)=>{ %>
            <tr>
              <td><%= doctor.IdDoctor %></td>
              <td><%= doctor.NombreUs %></td>
              <td><%= doctor.ApellidoUs %></td>
              <td><%= doctor.CorreoUs %></td>
              <td><%= doctor.Especialidad %></td>
              <td>
                <a href="/edit_doctor/<%= doctor.IdDoctor %>">
                  <img src="/img/editar.png" alt="" class="icon">
                </a>
                <a href="/delete_doctor/<%= doctor.IdDoctor %>">
                  <img src="/img/borrar.png" alt="" class="icon">
                </a>
              </td>
            </tr>
          <% }) %>   
      </thead>
    </table>
    <a href="/create_doctor">
      <button>Nuevo Doctor</button>
    </a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>
